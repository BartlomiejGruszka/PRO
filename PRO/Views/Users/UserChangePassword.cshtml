@model PRO.ViewModels.UserProfileViewModel
@{
    ViewBag.Title = "Profil użytkownika";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>
    <h1 class="main_h1 edit-info">
        <span class="h1-title">
            <span>
                @Model.User.ApplicationUser.UserName
            </span>

        </span>
    </h1>
</div>
<div id="content">

    <table border="0" cellpadding="0" cellspacing="0" width="100%">
        <tbody>
            <tr>
                <td class="borderClass" width="225" style="border-width: 0 1px 0 0;" valign="top">
                    <div style="width: 225px">

                        <div style="text-align: center;">
                            @if (Model.User.Image != null)
                            {<a>
                                    <img style="max-width:200px;width: expression(this.width > 200 ? 200: true);" class="lazyloaded" src="@Url.Content(Model.User.Image.ImagePath)">
                                </a>}

                        </div>
                        <div class="clearfix mauto mt16" style="width:160px;padding-right:10px">
                        </div>
                        <div class="underlined_h2">Dołączył: </div><p>@Model.User.RegisterDate</p>

                        <div class="underlined_h2"></div>
                        <a style="margin: 20px; display:block;" href="#" class="btn btn-secondary">Listy użytkownika</a>
                        @if (User.Identity.IsAuthenticated && Model.LoggedUserId == Model.User.Id)
                        {<a style="margin: 20px; display:block;" href="#" class="btn btn-primary">Edytuj profil</a>
                         <a style="margin: 20px; display:block;" href="/users/@Model.User.Id/password" class="btn btn-primary">Zmień hasło</a>
                        }

                        <div class="clearfix mauto mt16" style="width:160px;padding-right:10px">
                        </div>

                    </div>
                </td>

                <td valign="top" style="padding-left: 5px;">
                    @Html.Partial("_UserChangePassword", Model.ChangePassword)

                </td>

            </tr>
        </tbody>
    </table>
</div>
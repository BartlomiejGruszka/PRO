@model PRO.Models.Review

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Usuń recenzję</h2>

<h3>Czy na pewno chcesz usunąć tę recenzję?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Game)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Game.Title)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.User)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.User.ApplicationUser.UserName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ReviewDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ReviewDate)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Moderator)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Moderator.User.ApplicationUser.UserName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.EditDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EditDate)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.GraphicsScore)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GraphicsScore)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.StoryScore)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StoryScore)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.MusicScore)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MusicScore)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.GameplayScore)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GameplayScore)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Usuń" class="btn btn-primary" />
            <div class="btn btn-secondary"><a class="actionLinkManage" href="/reviews/manage">Wróć</a></div>
        </div>
    }
</div>

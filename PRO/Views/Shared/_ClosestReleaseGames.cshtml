@model IEnumerable<PRO.Models.Game>
@using PRO.Helpers
    <div class="side-list-group">
        <h3 class="sidebar-title">Nadchodzące premiery</h3>
        @{
                    var bestGames = Model.ToList(); //replace it later with proper collection based on games with highest score

                    foreach (var game in bestGames)
                    {
                <a href="/games/@game.Id" class="list-group-item list-group-item-action flex-column align-items-start">
                    <div style="display:flex; flex-direction:row; overflow:hidden; text-overflow:clip;">
                        @if (game.Image != null)
                        {<img style="max-width: 50px;max-height: 50%;align-self: flex-start;flex-direction: row;" class=" lazyloaded" src="@Url.Content(game.Image.ImagePath)">
                        }

                        <div style="padding-left:15px;">
                            <div class="d-flex w-100 justify-content-between">
                                <h5 class="mb-1">@game.Title</h5>
                            </div>
                            <p class="mb-1">@Html.Raw(@game.Description.Truncate(100))</p>

                        </div>
                    </div>


                </a>


            }
        }

    </div>
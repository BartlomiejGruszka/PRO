@model PRO.ViewModels.EditUserViewModel

    <div class="">
        @using (Html.BeginForm("EditProfile", "Users", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <hr />
            @Html.ValidationSummary("", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.RegisterDate)
            @Html.HiddenFor(model => model.ImageId)
            @Html.HiddenFor(model => model.IsActive)
            @Html.HiddenFor(model => model.Email)
            @Html.HiddenFor(model => model.UserName)
            <div class="form-group">
                @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-12">
                    @Html.TextAreaFor(model => model.Description, new { @id = "mytextarea", @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.IsPublic, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-12">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.IsPublic)
                        @Html.ValidationMessageFor(model => model.IsPublic, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-12">
                    <input type="submit" class="btn btn-primary" value="Zapisz" />
                    <div class="btn btn-secondary"><a class="actionLinkManage" href="/users/@Model.Id">Wróć</a></div>
                </div>
            </div>
        }
    </div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

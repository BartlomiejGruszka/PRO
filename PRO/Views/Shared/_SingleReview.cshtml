@model PRO.Models.Review
@using PRO.Helpers
<div class="borderDark" style="padding: 4px 0;">
    <div class="spaceit">
        <div class="mb8" style="float: right; text-align: right;">
            <div title="">@Model.ReviewDate</div>
            <div class="lightLink spaceit">
                Rozegrane: xxx
            </div>
            <div>
                Ocena: xx
            </div>
        </div><div style="float: left; padding-bottom:12px;">
            <table border="0" cellpadding="0" cellspacing="0" width="100%" style="padding-left: 3px;">
                <tbody>
                    <tr>
                        <td valign="top" width="60">
                            <div class="">

                                @if (Model.User.Image != null)
                                {<a href="#">
                                        <img style="max-width: 100%; max-height: 100%;" class=" lazyloaded" src="@Url.Content(Model.User.Image.ImagePath)">
                                    </a>
                                }

                            </div>
                        </td>
                        <td valign="top" style="padding-left: 10px;">
                            <a href="#">@Model.User.ApplicationUser.UserName</a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="spaceit textReadability word-break pt8 mt8" style="clear: both; border-top: 1px solid #ebebeb; border-bottom: 1px solid #ebebeb;">

        @{ if (ViewContext.RouteData.Values["action"].ToString() != "SingleReview")
            {
                @Html.Raw(@Model.Content.Truncate(200))<text>... </text>
                <a href="/games/@Model.GameId/reviews/@Model.Id">więcej </a>
            }
            else
            {
                @Html.Raw(@Model.Content)
            }
        }
    </div>
</div>
